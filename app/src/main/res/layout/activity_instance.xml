<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.InstanceActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:useDefaultMargins="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:id="@+id/LogoView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:contentDescription="instance logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instance Menu"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:id="@+id/gsButton"
            style="@android:style/Widget.Button"
            android:layout_row="2"
            android:layout_column="0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/gs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GeoServer"
                android:id="@+id/gsCaption"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView"
                android:gravity="center"
                style="@style/Base.TextAppearance.AppCompat.Button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:id="@+id/gnButton"
            style="@android:style/Widget.Button"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/gn" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catalogue"
                android:id="@+id/textView2"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView2"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:id="@+id/viewerButton"
            style="@android:style/Widget.Button"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viewer Contexts"
                android:id="@+id/textView5"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/titleText"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/urlText"
            android:layout_row="6"
            android:layout_column="0"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_row="7"
            android:layout_column="0"
            android:id="@+id/abstractText" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_row="8"
            android:layout_column="0">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in production"
                android:id="@+id/productionCheckBox"
                android:checked="false"
                android:enabled="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="public"
                android:id="@+id/publicCheckBox"
                android:checked="false"
                android:enabled="false" />
        </TableRow>

    </GridLayout>
</RelativeLayout>
